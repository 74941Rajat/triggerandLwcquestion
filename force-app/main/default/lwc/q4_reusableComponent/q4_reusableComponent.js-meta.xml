<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Admin Notification</masterLabel>

    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__HomePage,lightning__RecordPage">

            <property
                name="title"
                type="String"
                label="Title"
                description="Main headline of the announcement"
            />
            <property
                name="message"
                type="String"
                label="Message Body"
                description="Detailed text of the announcement"
            />
            <property
                name="severity"
                type="String"
                label="Severity"
                description="Announcement style"
                datasource="info,warning,error"
                default="info"
            />
            <property
                name="ctaLabel"
                type="String"
                label="CTA Label"
                description="Text for the Call-To-Action button"
            />
            <property
                name="ctaDestination"
                type="String"
                label="CTA URL"
                description="URL for Call-To-Action"
            />

        </targetConfig>
    </targetConfigs>

</LightningComponentBundle>
